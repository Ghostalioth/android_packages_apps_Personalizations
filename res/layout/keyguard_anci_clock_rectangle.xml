<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="-20.0dip" />
    <FrameLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.airbnb.lottie.LottieAnimationView
            android:gravity="center"
            android:layout_gravity="center"
            android:clickable="false"
            android:layout_width="300.0dip"
            android:layout_height="300.0dip"
            android:layout_marginStart="0.0dip"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/rectangle" />
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextClock
                android:textSize="45.0dip"
                android:textStyle="bold"
                android:textColor="@android:color/system_accent1_100"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:format12Hour=" hh"
                android:format24Hour=" HH" />
            <TextClock
                android:textSize="20.0dip"
                android:textColor="@android:color/system_accent1_100"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:format12Hour=" "
                android:format24Hour=" " />
            <TextClock
                android:textSize="45.0dip"
                android:textStyle="bold"
                android:textColor="@android:color/system_accent1_100"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:format12Hour=" mm"
                android:format24Hour=" mm" />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30.0dip">
        <TextClock
            android:textSize="15.0dip"
            android:textColor="@android:color/system_accent1_100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:format12Hour=" MMMM dd "
            android:format24Hour=" MMMM dd " />
        <LinearLayout
            android:layout_gravity="center"
            android:background="@drawable/anci_dot_bg"
            android:layout_width="5.0dip"
            android:layout_height="16.0dip" />
        <TextClock
            android:textSize="15.0dip"
            android:textColor="@android:color/system_accent1_100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:format12Hour=" EEEE"
            android:format24Hour=" EEEE" />
    </LinearLayout>
</LinearLayout>